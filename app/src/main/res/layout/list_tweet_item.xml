<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivProfilePic"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        android:minHeight="50dp"
        android:minWidth="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserName"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_alignTop="@+id/ivProfilePic"
        android:layout_toRightOf="@+id/ivProfilePic"
        android:layout_toEndOf="@+id/ivProfilePic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTweetText"
        android:autoLink="all"
        android:linksClickable="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_below="@+id/tvUserName"
        android:layout_toRightOf="@+id/ivProfilePic"
        android:layout_toEndOf="@+id/ivProfilePic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHandleName"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_toRightOf="@+id/tvUserName"
        android:layout_toEndOf="@+id/tvUserName" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPostTime"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivTweetPic"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignLeft="@+id/tvTweetText"
        android:layout_alignStart="@+id/tvTweetText"
        android:layout_below="@+id/tvTweetText"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="false"/>

    <ImageButton
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/ibReply"
        android:layout_below="@+id/ivTweetPic"
        android:layout_alignLeft="@+id/tvTweetText"
        android:layout_alignStart="@+id/tvTweetText"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_reply" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvReTweetCount"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ibRetweet"
        android:layout_toEndOf="@+id/ibRetweet"
        android:layout_alignTop="@+id/ibReply" />

    <ImageButton
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/ibRetweet"
        android:layout_alignTop="@+id/ibReply"
        android:layout_toRightOf="@+id/ibReply"
        android:layout_marginLeft="90dp"
        android:layout_toEndOf="@+id/ibReply"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src = "@drawable/ic_retweet"/>

    <ImageButton
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/ibFaviorite"
        android:layout_alignTop="@+id/ibRetweet"
        android:layout_toRightOf="@+id/ibRetweet"
        android:layout_marginLeft="90dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_toEndOf="@+id/ibRetweet"
        android:src = "@drawable/ic_faviorite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFavoriteCount"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ibFaviorite"
        android:layout_toEndOf="@+id/ibFaviorite"
        android:layout_alignTop="@+id/ibReply" />


</RelativeLayout>