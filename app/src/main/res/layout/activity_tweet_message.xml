<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.apps.androidsimpletwitterapp.TweetMessageActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivProfilePic"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        android:minHeight="50dp"
        android:minWidth="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserName"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_alignTop="@+id/ivProfilePic"
        android:layout_toRightOf="@+id/ivProfilePic"
        android:layout_toEndOf="@+id/ivProfilePic" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHandleName"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_below="@+id/tvUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTweetText"
        android:autoLink="all"
        android:linksClickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20sp"
        android:layout_below="@+id/ivProfilePic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivTweetPic"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvTweetText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="false"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPostTime"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/ivTweetPic"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRetweetCount"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tvPostTime"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFavoriteCount"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/tvRetweetCount"
        android:layout_toRightOf="@+id/tvRetweetCount"
        android:layout_toEndOf="@+id/tvRetweetCount"/>


    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ibReply"
        android:layout_below="@+id/tvRetweetCount"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_reply" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ibRetweet"
        android:layout_alignTop="@+id/ibReply"
        android:layout_toRightOf="@+id/ibReply"
        android:layout_marginLeft="100dp"
        android:layout_toEndOf="@+id/ibReply"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src = "@drawable/ic_retweet"/>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ibFaviorite"
        android:layout_alignTop="@+id/ibRetweet"
        android:layout_toRightOf="@+id/ibRetweet"
        android:layout_marginLeft="100dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_toEndOf="@+id/ibRetweet"
        android:src = "@drawable/ic_faviorite"/>


</RelativeLayout>
    </ScrollView>
